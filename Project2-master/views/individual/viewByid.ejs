<%- include("../includes/header.ejs", {extra : ' overflow: hidden', title: result[0].display_name, url: result[0].image_url}); %>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50" background=<%= result[0].image_url %>>
<div id="wrapper">
    <%- include("../includes/navbar.ejs"); %>
    <container>
        <div class="row">
                <div class="transbox">
                <h1 align="center"><%= result[0].display_name %></h1>
                <ul>
                    <% for(var i=0; ability.length > i; i++ ) { %>
                    <%= ability[i].ability_name %><br>
                    <ul>
                        - <%=ability[i].description %><br>
                    </ul>
                    <% } %>
                </ul>
                </div>
                <% if(team[0].team_id != null) { %>
                <% if(team instanceof Array) { %>
                <% for(var i=0; team.length > i; i++ ) { %>
                <div class="transbox">
                <a href="/team/?team_id=<%= team[i].team_id %>">
                    <h1 align="center"><%= team[i].team_name %></h1>
                </a>
                <ul>
                    <% for(var j=0; all.length > j; j++ ) { %>
                    <% if(team[i].team_name == all[j].team_name) {%>
                    <a href="/individual/?individual_id=<%= all[j].individual_id %>">
                        <%= all[j].display_name %><br>
                    </a>
                    <% } %>
                    <% } %>
                </ul>
                </div>
                <% } %>
                <% } %>
                <% if(!(team instanceof Array)) { %>
                <div class="transbox">
                <a href="/team/?team_id=<%= team[0].team_id %>">
                    <h1 align="center"><%= team[0].team_name %></h1>
                </a>
                <ul>
                    <% for(var r=0; all.length > r; r++ ) { %>
                    <% if(team[0].team_name == all[r].team_name) {%>
                    <a href="/individual/?individual_id=<%= all[r].individual_id %>">
                        <%= all[r].display_name %><br>
                    </a>
                    <% } %>
                    <% } %>
                </ul>
                </div>
                <% } %>
                <% } %>
            <div class="miny">
            <button style="background-color: transparent; border: 0px;" onclick="event.preventDefault();window.location.href='/individual/edit2/?individual_id=<%= result[0].individual_id %>'">UPDATE</button>
            </div>
            <div class="miny" style="margin-top: 0px">
            <form action="/individual/delete/" style="display:inline;">
                <input type="hidden" name="individual_id" id="individual_id" value="<%= result[0].individual_id %>" />
                <input type="submit" value="DELETE" style="background-color: transparent; border: 0px;"/>
            </form>
            </div>
        </div>
    </container>
    <footer class="text-center">
    </footer>
</div>





</body>
</html>